<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary">


        <TextView
            android:id="@+id/relax1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="100dp"
            android:text="What's one thing you're grateful for?"
            android:textColor="@color/colorAccentLight"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/relax3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:text="Write about a fond memory."
            android:textColor="@color/colorAccentLight"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/relax4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:text="Take a minute to journal."
            android:textColor="@color/colorAccentLight"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/relax2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:text="What's something that made you happy recently?"
            android:textColor="@color/colorAccentLight"
            android:textSize="30dp" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>